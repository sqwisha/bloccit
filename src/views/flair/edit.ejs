<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
    <title>Edit Flair</title>
  </head>
  <body>

    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <h1>Edit Flair</h1>

      <form action="/topics/<%= topicId %>/posts/<%= postId %>/flair/<%= flair.id %>/update" method="post">
        <div class="form-group">
          <label for="name">Flair name</label>
          <input type="text" name="name" class="form-control"
          value="<%= flair.name %>" aria-describedby="nameHelp" placeholder="Enter name">
        </div>

        <div class="form-group">
          <label for="color">Color</label>
          <input type="color" name="color" value="<%= flair.color %>" class="form-control" style="width: 100px; height: 100px">
        </div>

        <button type="submit" class="btn btn-primary">Update</button>
      </form>

    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>