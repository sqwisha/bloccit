<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
    <title>New Advertisement</title>
  </head>
  <body>

    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <h1>New Advertisement</h1>

      <form action="/ads/create" method="post">
        <div class="form-group">
          <label for="title">Advertisement title</label>
          <input type="text" name="title" class="form-control" aria-describedby="titleHelp" placeholder="Enter title">
        </div>

        <div class="form-group">
          <label for="description">Description</label>
          <textarea rows="4" class="form-control" name="description" placeholder="Enter Description"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
      </form>

    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>